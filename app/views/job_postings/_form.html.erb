<%= form_with(model: @job_posting, local: true) do |form| %>
  <% if @job_posting.errors.present? %>
    <% @job_posting.errors.full_messages.each do |error| %>
      <p><%= error %></p> 
    <% end %>
  <% end %>
  
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
<br>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :start_time %>
    <%= form.time_field :start_time %>
  </div>

 <div>
    <%= form.label :end_time %>
    <%= form.time_field :end_time %>
  </div>

 <div>
    <%= form.label :hourly_rate %>
    <%= form.number_field :hourly_rate, step: :any %>
  </div>
<br>
  <div id='skills'>
    <p><strong>Skills</strong></p>
    <%= form.fields_for :skills do |job| %>
    <div>
        <%= render 'skill_fields', f: job %>
    </div>
    <% end %>
  </div>

  <div class="links">
    <%= link_to_add_association 'Add Skill', form, :skills %>
  </div>
<br>
  <div>
    <%= form.submit :Submit %>
  </div>

<% end %>